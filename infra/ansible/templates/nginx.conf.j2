events {}

http {
  upstream webapp {
    server frost-webapp:5000;
  }

  server {
    listen 80;

    location / {
      proxy_pass http://webapp;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
    }

    location /healthz {
      return 200 'OK';
      add_header Content-Type text/plain;
    }
  }
}
